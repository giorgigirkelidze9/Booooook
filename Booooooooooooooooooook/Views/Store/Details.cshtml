@model Booooooooooooooooooook.Models.Book

@{
	ViewBag.Title = "Book - " + Model.Name;
}
<h2>@Model.Name</h2>
<p>
	<img alt="@Model.Name"
		 src="@Model.ImageLink" />
</p>
<div id="item-details">
	<p>
		<em>Category:</em>
		@Model.Category.Name
	</p>
	<p>
		<em>Author:</em>
		@Model.Author
	</p>
	<p>
		<em>Price:</em>
		@String.Format("{0:F}",
	 Model.Price)
	</p>
	<p class="button1">
		@Html.ActionLink("Add to cart", "Add",
			 "ShoppingCart", new { id = Model.BookId }, "")
	</p>
	<div class="comments" data-width="230" data-numposts="5"></div>
</div>