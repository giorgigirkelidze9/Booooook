@model Booooooooooooooooooook.Models.Category


@{
	ViewBag.Title = "Browse";
}

<h2>Browsing Category : @Model.Name</h2>
<div class="row marginTop">
	@foreach (var book in Model.Books)
	{
		<div class="col-sm-3 col-lg-3 col-md-3 col-xs-3">
			<a href="@Url.Action("Details","Store",new { id = book.BookId })">
				<img style="width:100px;height:140px;" src="@book.ImageLink" alt="" />
				<br />
				<span>@book.Name</span>
			</a>
			@String.Format("{0:F}", book.Price)
			<p class="button1">
				@Html.ActionLink("Add to cart", "Add",
										   "ShoppingCart", new { id = book.BookId }, "")
			</p>
		</div>
	}
</div>

